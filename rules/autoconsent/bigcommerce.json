{
  "name": "bigcommerce",
  "vendorUrl": "https://github.com/bigcommerce/consent-manager",
  "prehideSelectors": [
    "#cookies-banner-overlay",
    "#consent-manager",
    "div[data-consent-manager-dialog]"
  ],
  "detectCmp": [
    {
      "eval": "EVAL_BIGCOMMERCE_0"
    },
    {
      "exists": "#consent-manager,div[data-consent-manager-dialog]"
    }
  ],
  "detectPopup": [
    {
      "visible": "#consent-manager,div[data-consent-manager-dialog]",
      "check": "any"
    }
  ],
  "optIn": [
    {
      "if": { "exists": "div[data-consent-manager-dialog]" },
      "then": [
        {
          "click": "div[data-consent-manager-dialog] form button[type='submit']"
        }
      ],
      "else": []
    },
    {
      "if": { "exists": "#consent-manager" },
      "then": [
        {
          "click": "#consent-manager div > button[class]:last-child"
        }
      ],
      "else": []
    }
  ],
  "optOut": [
    {
      "if": { "exists": "div[data-consent-manager-dialog]" },
      "then": [
        {
          "click": "div[data-consent-manager-dialog] form button:not([type='submit'])"
        }
      ],
      "else": []
    },
    {
      "if": { "exists": "#consent-manager" },
      "then": [
        {
          "click": "#consent-manager div > button[class][style]:nth-child(2)"
        }
      ],
      "else": []
    },
    {
      "if": { "waitFor": "div[data-consent-manager-dialog] label" },
      "then":[
        {
          "waitForThenClick": "div[data-consent-manager-dialog] tbody > tr > td > label:nth-child(2) > input[required]",
          "all": true
        },
        {
          "waitForThenClick": "div[data-consent-manager-dialog] form button[type='submit']"
        }
      ],
      "else": []
    }
  ]
}